@using gjj1.Models;

<style>

    .add {
        position: absolute;
        bottom: 50%;
        left: 50%;
    }

    #tj {
        margin-top: 5%;
    }
</style>

<table class="table table-bordered" id="tj">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>状态</th>
        <th>所属用户组</th>
        <th>操作</th>
    </tr>

    @foreach (Login a in ViewData["DataList"] as List<Login>)
    {
    <tr>
        <td>@a.Id</td>
        <td>@a.Name</td>
        <td>@a.cz</td>
        <td>@a.gid</td>
        <td>
            <a href="javascript:del(@a.Id)">删</a>
            <a href="/home/modify/@a.Id">改（id不可修改）</a>
        </td>
    </tr>

    }

</table>

<a href="/home/Add" class="add">添加</a>

<script>
    function del(id) {
        if (confirm("您确定要删除吗？")) {
            window.location = "/home/del/" + id;
        }
    }

 var jss = "@(Session["permission"])";
$(function () {
    if (jss == "普通权限") {
        alert("你没有足够权限访问该页面");
        // alert(jss);
        $('#tj').hide();
    }
})
</script>



